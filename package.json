		"shadcn-ui": "pnpm --filter @bbnocode/web shadcn-ui"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.28.1",
		"@bbnocode/tsconfig": "workspace:*",
		"@bbnocode/scripts": "workspace:*",
		"@types/node": "^22.13.5",
		"turbo": "^2.4.4",
		"typescript": "5.7.3"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
