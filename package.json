	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "biome lint.",
		"format": "biome format . --write",
		"check-types": "turbo run check-types",
		"turbo:clean": "turbo run clean",
		"changeset": "changeset",
