{
	"extends": "@bbnocode/tsconfig/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@ui/*": ["./modules/ui/*"], // 组件库路径别名
			"@shared/*": ["./modules/shared/*"], // 共享模块路径别名
			"content-collections": ["./.content-collections/generated"] // 文档生成路径集合
		},
		"noEmit": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.cjs",
		"**/.mjs",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
